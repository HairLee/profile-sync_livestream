<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <!-- Emoticons list icon -->
    <ImageView
        android:id="@+id/btn_emoticon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_sticker_emoticon"
        android:visibility="gone"/>

    <!-- Input message edit text -->
    <com.vng.datasync.ui.widget.CustomFontEditText
        android:id="@+id/input_message"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:background="@drawable/private_chat_input_background"
        android:hint="@string/hint_send_private_chat"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:textSize="14.4sp"
        app:fontPath="@string/SFUIText_Regular"/>

    <!-- Send message button -->
    <ImageView
        android:id="@+id/btn_send"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:clickable="true"
        android:scaleType="center"
        android:src="@drawable/ic_send_mess_off"/>
</LinearLayout>